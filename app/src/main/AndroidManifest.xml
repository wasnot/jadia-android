<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="ai.sensy.jadia"
        >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".youtube.YouTubeAPIDemoActivity"
                android:label="@string/youtube_api_demo"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                    android:name="@string/isLaunchableActivity"
                    android:value="false"
                    />
        </activity>

        <activity
                android:name=".youtube.VideoWallDemoActivity"
                android:configChanges="orientation|screenSize|keyboardHidden"
                android:label="@string/videowall_demo_name"
                android:screenOrientation="landscape"
                android:theme="@style/BlackNoBarsTheme"
                >
            <meta-data
                    android:name="@string/minVersion"
                    android:value="11"
                    />
            <meta-data
                    android:name="@string/isLaunchableActivity"
                    android:value="true"
                    />
        </activity>

        <activity
                android:name=".youtube.VideoListDemoActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:label="@string/videolist_demo_name"
                >
            <meta-data
                    android:name="@string/minVersion"
                    android:value="13"
                    />
            <meta-data
                    android:name="@string/isLaunchableActivity"
                    android:value="true"
                    />
        </activity>

        <activity
                android:name=".youtube.PlayerViewDemoActivity"
                android:configChanges="orientation|screenSize|keyboardHidden"
                android:label="@string/playerview_demo_name"
                android:screenOrientation="nosensor"
                >
            <meta-data
                    android:name="@string/minVersion"
                    android:value="8"
                    />
            <meta-data
                    android:name="@string/isLaunchableActivity"
                    android:value="true"
                    />
        </activity>

        <activity
                android:name=".youtube.FragmentDemoActivity"
                android:configChanges="orientation|screenSize|keyboardHidden"
                android:label="@string/fragment_demo_name"
                android:screenOrientation="nosensor"
                >
            <meta-data
                    android:name="@string/minVersion"
                    android:value="11"
                    />
            <meta-data
                    android:name="@string/isLaunchableActivity"
                    android:value="true"
                    />
        </activity>

        <activity
                android:name=".youtube.PlayerControlsDemoActivity"
                android:label="@string/player_controls_demo_name"
                android:windowSoftInputMode="stateHidden"
                >
            <meta-data
                    android:name="@string/minVersion"
                    android:value="8"
                    />
            <meta-data
                    android:name="@string/isLaunchableActivity"
                    android:value="true"
                    />
        </activity>

        <activity
                android:name=".youtube.FullscreenDemoActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:label="@string/fullscreen_demo_name"
                android:screenOrientation="sensor"
                android:theme="@style/BlackNoTitleBarTheme"
                >
            <meta-data
                    android:name="@string/minVersion"
                    android:value="8"
                    />
            <meta-data
                    android:name="@string/isLaunchableActivity"
                    android:value="true"
                    />
        </activity>

        <activity
                android:name=".youtube.ActionBarDemoActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:label="@string/action_bar_demo_name"
                android:screenOrientation="sensorLandscape"
                android:theme="@style/OverlayActionBarTheme"
                >
            <meta-data
                    android:name="@string/minVersion"
                    android:value="11"
                    />
            <meta-data
                    android:name="@string/isLaunchableActivity"
                    android:value="true"
                    />
        </activity>

        <activity
                android:name=".youtube.StandalonePlayerDemoActivity"
                android:label="@string/standalone_player_demo_name"
                >
            <meta-data
                    android:name="@string/minVersion"
                    android:value="8"
                    />
            <meta-data
                    android:name="@string/isLaunchableActivity"
                    android:value="true"
                    />
        </activity>

        <activity
                android:name=".youtube.IntentsDemoActivity"
                android:label="@string/intents_demo_name"
                >
            <meta-data
                    android:name="@string/minVersion"
                    android:value="8"
                    />
            <meta-data
                    android:name="@string/isLaunchableActivity"
                    android:value="true"
                    />
        </activity>
    </application>

</manifest>